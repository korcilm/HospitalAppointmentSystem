@model SignInDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<div id="test-form" class="white-popup-block border">
    <div class="popup_box ">
        <div class="popup_inner">
            <h3>Giriş Yap</h3>
            <form asp-action="SignIn" asp-controller="Auth" method="post">
                <div class="row">
                    <div class="col-xl-12">
                        <input asp-for="IdentityNumber" placeholder="Tc Kimlik No">
                        <span asp-validation-for="IdentityNumber" class="text-danger"></span>
                    </div>
                    <div class="col-xl-12">
                        <input asp-for="Password" placeholder="Şifre">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>


                    <div class="col-xl-12">
                        <button type="submit" class="boxed-btn3">Giriş Yap</button>
                    </div>
                    <div class="pb-10 pb-lg-15">
                        <div class="text-muted font-weight-bold font-size-h4 mt-2 ml-3">
                            Hesabın Yok mu?
                            <a asp-action="Register" asp-controller="Auth" class="text-primary font-weight-bolder">Hesap Oluştur</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>