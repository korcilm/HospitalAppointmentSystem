@model UpdateUserDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card mt-5">
    <div class="card-header">
        <h4>Bilgileri Güncelle</h4>
    </div>
    <div class="mt-4 row card-body ">

        <form asp-action="Index" method="post">
            <div class="row">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" class="form-control" />
                <input type="hidden" asp-for="IdentityNumber" class="form-control" />
                <input type="hidden" asp-for="RoleId" class="form-control" />
                <input type="hidden" asp-for="PoliclinicId" class="form-control" />

                <div class="col-md-6">
                    <div class="form-group">
                        <label  class="control-label">Ad</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Soyad</label>
                        <input asp-for="Surname" class="form-control" />
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6 mt-3">
                    <div class="form-group">
                        <label class="control-label">Kan Grubu</label>
                        <select class="form-select" asp-for="BloodTypeId" asp-items="@ViewBag.BloodTypes">
                        </select>
                        <span asp-validation-for="BloodTypeId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6 mt-3">
                    <div class="form-group">
                        <label class="control-label">Şifre</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6 mt-3">
                    <div class="form-group">
                        <label class="control-label">Telefon</label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6 mt-3">
                    <div class="form-group">
                        <label class="control-label">Doğum Tarihi</label>
                        <input asp-for="BirthDate" class="form-control" />
                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12 mt-3">
                    <div class="form-group">
                        <label class="control-label">Adres</label>
                        <textarea asp-for="Address" class="form-control"></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group mt-4">
                    <input type="submit" value="Güncelle" class="btn btn-info" style="color:#fff" />
                </div>
            </div>
        </form>
    </div>
</div>