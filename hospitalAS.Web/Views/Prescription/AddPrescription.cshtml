@model AddPrescriptionDto

@{
    ViewData["Title"] = "AddPrescription";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card mt-5">
    <div class="card-header">
        <h4>Reçete Oluştur</h4>
    </div>
    <div class="mt-4 row card-body ">
        <form asp-action="AddPrescription" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="AppointmentId" class="form-control" />

                <div class="col-md-6">
                    <div class="form-group">
                        <label  class="control-label">İlaç Adı</label>
                        <input asp-for="Medicament" class="form-control" />
                        <span asp-validation-for="Medicament" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Açıklama</label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label  class="control-label">Periyot</label>
                        <input asp-for="Period" class="form-control" />
                        <span asp-validation-for="Period" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label  class="control-label">Kullanım Şekli</label>
                        <input asp-for="Usage" class="form-control" />
                        <span asp-validation-for="Usage" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label  class="control-label">Kullanım Sayısı</label>
                        <input asp-for="UsingCount" class="form-control" />
                        <span asp-validation-for="UsingCount" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label  class="control-label">İlaç Adedi</label>
                        <input asp-for="MedicamentCount" class="form-control" />
                        <span asp-validation-for="MedicamentCount" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Ekle" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>


